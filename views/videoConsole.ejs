<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <!--meta tag for responsive viewport-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <title>ManipalCourseWare</title>

  <!-- google fonts link below here-->
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link href="https://fonts.googleapis.com/css?family=Raleway:200,100,400" rel="stylesheet" type="text/css" />

  <!--Bootstrap 4 CSS-->
  <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css">
  <!-- Our Custom CSS -->
  <link rel="stylesheet" href="css/style.css" >
  <!-- <link rel="stylesheet" href="css/index.css" > -->
  <!-- <link rel="stylesheet" href="css/utilities/spinner.css" > -->
  <link rel="stylesheet" href="css/utilities/scrollbar.css" >
  <link rel="stylesheet" href="css/videoConsole.css" >
  <!-- <link rel="stylesheet" href="css/videoPage.css" > -->
 
  <!--fontawesome icons kitcode below-->
  <script src="https://kit.fontawesome.com/f18f73cc60.js" crossorigin="anonymous"></script>

  <!--Jquery&popperjs link below-->
  <script type="text/javascript" src="js/jquery-3.5.1.min.js"></script>
  <script type="text/javascript" src="https://unpkg.com/@popperjs/core@2"></script>
  <script type="text/javascript" src="js/bootstrap.min.js"></script>
  <script type="text/javascript" src="js/functionality.js"></script>
</head>
<body >

<!--CSS Spinner-->
<!-- <div class="spinner-wrapper">
    <div class="spinner"></div>
</div> -->

  <div class="wrapper">
    <!-- Sidebar Holder -->
    <nav id="sidebar" class="sticky-top active">
        <div class="sidebar-logo">
            <img class="img-fluid mx-auto d-block" src="img/logo-icon.png">
        </div>
        <ul class="list-unstyled components">
            <li class="active">
                <a href="/home"><i class="fas fa-home"></i>  HOME</a>
            </li>
            <li>
                <a href="/explore"><i class="fas fa-play-circle"></i>  EXPLORE</a>
            </li>
            <li>
                <a href="/crowdsource"><i class="fas fa-play-circle"></i>  CROWDSOURCE</a>
            </li>
            <li>
                <p>FOLLOW US</p>
            </li>
            <div class="socialmedia-icons">
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-facebook-square"></i></a>
            </div>
        </ul>
        <div class="sidebar-footer">
            <ul class="list-unstyled">
                <li><i class="fa fa-copyright" aria-hidden="true"></i>Copyright 2020</li>
                <li>Made with <span><i class="fa fa-heart" aria-hidden="true"></i></span> by Abdul Rehaman</li>
            </ul>
        </div>
    </nav>

    <!-- Page Content Holder -->
    
    <div id="content">
        <nav class="navbar sticky-top navbar-expand-sm topbar-custom-video position-fixed top-0 w-100 px-0">
            <div class="container-fluid justify-content-start ">
                <button type="button" id="sidebarCollapse" class="navbar-btn active">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
                <a class="navbar-brand mr-auto" href="/home">ManipalCourseWare</a>
                <div class="crowdsource ">
                    <ul class="nav">
                      <li class="nav-items">
                          <form clas="logout-form" action="/logout?_method=DELETE" method="POST">
                            <button type="submit" class="btn crowdsource-btn">LOGOUT</button>
                          </form>
                      </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container-fluid main-section">
            <div class="row">
                <div id="left" class="col-lg-5 order-3 order-lg-1 left ">
                    <p><%= branch %>/<%= section %>/<%= subject %></p>
                    <% if (print.length == 0) { %>
                        <h2>Sorry, no videos available for this subject</h2>
                    <% } else { %>
                    <% print.forEach((lecture)=>{ %>
                        <form id="<%='lecture-'+lecture._id%>" class="card-form card-form-actions" action="<%=lecture.link%>" method="POST">
                            <button type="submit" class="btn-card video-link">
                                <div class="video-card">
                                    <div class="row">
                                        <div class="col-lg-6 video-heading">
                                            <p><%=lecture.lecture_no %> . <%=lecture.lecture_topic %></p><br>
                                            <p><%=lecture.date_time %><br><%=lecture.teacher_name %></p>
                                        </div>
                                        <div class="col-lg-6 video-img">
                                            <img src="img/video-thumbnail.webp" class="img-thumbnail">
                                        </div>
                                    </div>
                                    
                                </div>
                            </button>
                            <button type="button" class="btn btn-primary btn-edit" value="<%=lecture._id%>" onclick="openEditModal(this.value)">Edit</button>
                            <button type="button" class="btn btn-danger btn-delete" value="<%=lecture._id%>" onclick="deleteLecture(this.value)"
                            >Delete</button>
                            
                        </form>
                    <% }); %>
                    <% } %>
                </div>
                <!-- <div id="resize-handle" class="col-lg-1 order-2 order-lg-2">
                </div> -->
                <div id="right" class="col-lg-7 order-1 order-lg-3 right">
                    <h1><%= subject %></h1>
                    
                    <div class="video-player">
                        
                            <div class="video-inside">
                                <iframe id="video-player" width="640" height="360" src="https://www.youtube.com/embed/dQw4w9WgXcQ?autoplay=1&mute=1" allowfullscreen style="border:none; position: absolute; top: 0; left: 0; right: 0; bottom: 0; height: 100%; max-width: 100%;">
                                </iframe>
                            </div>
                        <!-- <div style='max-width: 640px'>
                            <div style='position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden;'>
                                <iframe width="640" height="360" src="https://web.microsoftstream.com/embed/video/?autoplay=false&showinfo=true" allowfullscreen style="border:none; position: absolute; top: 0; left: 0; right: 0; bottom: 0; height: 100%; max-width: 100%;">
                                </iframe>
                            </div>
                        </div> -->
                    </div>
                    <button type="button" class="btn btn-success mainmenu-btn" data-toggle="modal" data-target="#newCardModal">Add New</button>
                    <a href="/explore" class="btn btn-info mainmenu-btn" role="button">GO BACK TO MAIN MENU</a>
                    
                </div>
            </div>
        </div>
    </div>
    
    <!-- <div class="footer">
        <ul class="list-unstyled">
            <li><i class="fa fa-copyright" aria-hidden="true"></i>Copyright 2022</li>
            <li>Made with <span><i class="fa fa-heart" aria-hidden="true"></i></span> by Abdul Rehaman</li>
        </ul>
    </div> -->
</div>
<!-- Modal HTML -->

<div id="edit-modal" class="modal">
    <div class="modal-dialog">
        <div class="modal-content" id="edit-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Lecture</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="closeEditModal()">&times;</button>
            </div>
            <div class="modal-body">
                <form id="edit-form" onsubmit="editLecture(event)" data-lecture-id="">
                    <div class="form-group">
                        <label for="edit-modal-lecture-no">Lecture No</label>
                        <input type="text" class="form-control" id="edit-modal-lecture-no">
                    </div>
                    <div class="form-group">
                        <label for="edit-modal-lecture-topic">Lecture Topic</label>
                        <input type="text" class="form-control" id="edit-modal-lecture-topic">
                    </div>
                    <div class="form-group">
                        <label for="edit-modal-date-time">Date & Time</label>
                        <input type="text" class="form-control" id="edit-modal-date-time">
                    </div>
                    <div class="form-group">
                        <label for="edit-modal-teacher-name">Teacher Name</label>
                        <input type="text" class="form-control" id="edit-modal-teacher-name">
                    </div>
                    <div class="form-group">
                        <label for="edit-modal-lecture-link">Lecture video link</label>
                        <input type="text" class="form-control" id="edit-modal-lecture-link">
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-primary" value="Save">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="closeEditModal()">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
  
<div class="modal" id="newCardModal">
    <div class="modal-dialog">
        <div class="modal-content" id="newCardContent">
            <div class="modal-header">
                <h5 class="modal-title">Add New Lecture</h5>
                <button type="button" class="close" id="closeModal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="lectureNo">Lecture Number</label>
                        <input type="text" class="form-control" id="add-lectureNo" placeholder="Enter lecture number">
                    </div>
                    <div class="form-group">
                        <label for="lectureTopic">Lecture Topic</label>
                        <input type="text" class="form-control" id="add-lectureTopic" placeholder="Enter lecture topic">
                    </div>
                    <div class="form-group">
                        <label for="dateTime">Date and Time</label>
                        <input type="text" class="form-control" id="add-dateTime" placeholder="Enter date and time">
                    </div>
                    <div class="form-group">
                        <label for="teacherName">Teacher Name</label>
                        <input type="text" class="form-control" id="add-teacherName" placeholder="Enter teacher name">
                    </div>
                    <div class="form-group">
                        <label for="lectureLink">Video Link</label>
                        <input type="text" class="form-control" id="add-lectureLink" placeholder="Enter video link">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="closeModal" onclick="closeNewCardModel()">Close</button>
                <button type="button" class="btn btn-primary" onclick="createLecture('<%=branch%>', '<%=section%>', '<%=subject%>')">Create</button>
            </div>
        </div>
    </div>
</div>
</body>
</html>
